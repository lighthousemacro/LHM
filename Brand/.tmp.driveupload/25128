    <script>
        // Chart.js default configuration
        Chart.defaults.color = '#FFFFFF';
        Chart.defaults.borderColor = 'rgba(211, 214, 217, 0.2)';
        Chart.defaults.font.family = "'Inter', sans-serif";

        // MRI Evolution Chart
        const mriCtx = document.getElementById('mriChart').getContext('2d');
        const mriData = {
            labels: ['Jan 23', 'Apr 23', 'Jul 23', 'Oct 23', 'Jan 24', 'Apr 24', 'Jul 24', 'Oct 24', 'Jan 25'],
            datasets: [{
                label: 'Master Risk Index',
                data: [-0.4, -0.2, 0.1, 0.3, 0.5, 0.7, 0.85, 1.0, 1.1],
                borderColor: '#0089D1',
                backgroundColor: 'rgba(0, 137, 209, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.4
            }, {
                label: 'High Risk Threshold',
                data: Array(9).fill(1.0),
                borderColor: '#FF2389',
                borderWidth: 2,
                borderDash: [10, 5],
                pointRadius: 0
            }]
        };

        new Chart(mriCtx, {
            type: 'line',
            data: mriData,
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true, position: 'top' }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        grid: { color: 'rgba(211, 214, 217, 0.1)' }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // Liquidity Conditions Chart
        const liqCtx = document.getElementById('liquidityChart').getContext('2d');
        const liqData = {
            labels: ['Jan 23', 'Apr 23', 'Jul 23', 'Oct 23', 'Jan 24', 'Apr 24', 'Jul 24', 'Oct 24', 'Jan 25'],
            datasets: [{
                label: 'LCI (Left Axis)',
                data: [0.5, 0.3, 0.0, -0.2, -0.4, -0.5, -0.6, -0.7, -0.8],
                borderColor: '#00D4FF',
                backgroundColor: 'rgba(0, 212, 255, 0.1)',
                borderWidth: 3,
                yAxisID: 'y',
                tension: 0.4
            }, {
                label: 'S&P 500 (Right Axis)',
                data: [4000, 4200, 4450, 4380, 4700, 5000, 5350, 5500, 5700],
                borderColor: '#00BB99',
                borderWidth: 2,
                yAxisID: 'y1',
                tension: 0.4
            }]
        };

        new Chart(liqCtx, {
            type: 'line',
            data: liqData,
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true, position: 'top' }
                },
                scales: {
                    y: {
                        type: 'linear',
                        position: 'left',
                        grid: { color: 'rgba(211, 214, 217, 0.1)' }
                    },
                    y1: {
                        type: 'linear',
                        position: 'right',
                        grid: { display: false }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // Pillar Decomposition Chart
        const pillarCtx = document.getElementById('pillarChart').getContext('2d');
        const pillarData = {
            labels: ['Labor', 'Pvt Credit', 'Gen Credit', 'Housing', 'Consumer', 'Business', 'Trade', 'Gov', 'Financial', 'Liquidity'],
            datasets: [{
                label: 'Contribution to MRI',
                data: [0.23, -0.05, 0.18, 0.11, 0.14, 0.13, 0.09, -0.11, 0.07, 0.12],
                backgroundColor: [
                    '#FF2389', '#00BB99', '#FF6723', '#FF6723', '#FF6723', 
                    '#FF6723', '#00D4FF', '#0089D1', '#00D4FF', '#FF6723'
                ],
                borderColor: '#0089D1',
                borderWidth: 2
            }]
        };

        new Chart(pillarCtx, {
            type: 'bar',
            data: pillarData,
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(211, 214, 217, 0.1)' }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // Threshold Monitor Chart
        const thresholdCtx = document.getElementById('thresholdChart').getContext('2d');
        const thresholdData = {
            labels: ['Quits Rate', 'LFI', 'RRP', 'HY OAS'],
            datasets: [{
                label: 'Current',
                data: [1.9, 0.93, 150, 290],
                backgroundColor: '#FF6723'
            }, {
                label: 'Threshold',
                data: [2.0, 0.5, 200, 300],
                backgroundColor: '#0089D1'
            }]
        };

        new Chart(thresholdCtx, {
            type: 'bar',
            data: thresholdData,
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: true, position: 'top' }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(211, 214, 217, 0.1)' }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });
